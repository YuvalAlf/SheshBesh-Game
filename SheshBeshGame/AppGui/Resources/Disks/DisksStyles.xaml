<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Ellipse" x:Key="DiskStyle">
        <Setter Property="Width" Value="15"/>
        <Setter Property="Height" Value="15"/>
    </Style>
    
    <Style TargetType="Ellipse" x:Key="BlackDiskStyle" BasedOn="{StaticResource DiskStyle}">
        <Setter Property="Fill" Value="{StaticResource BlackDiskBrush}"/>
    </Style>
    
    <Style TargetType="Ellipse" x:Key="WhiteDiskStyle" BasedOn="{StaticResource DiskStyle}">
        <Setter Property="Fill" Value="{StaticResource WhiteDiskBrush}"/>
    </Style>
    
</ResourceDictionary>