<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="ChosenDiskBrush3DFarward">
        <GradientStop Color="ForestGreen" Offset="1.0"/>
        <GradientStop Color="LightGreen" Offset="0.0"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ChosenDiskBrush3DBackward">
        <GradientStop Color="ForestGreen" Offset="0.0"/>
        <GradientStop Color="LightGreen" Offset="1.0"/>
    </LinearGradientBrush>
    <DrawingBrush x:Key="ChosenDiskBrush">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Geometry="{StaticResource OuterCircleGeometry}" Brush="{StaticResource ChosenDiskBrush3DBackward}"/>
                <GeometryDrawing Geometry="{StaticResource InnerCircleGeometry}" Brush="{StaticResource ChosenDiskBrush3DFarward}"/>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
</ResourceDictionary>