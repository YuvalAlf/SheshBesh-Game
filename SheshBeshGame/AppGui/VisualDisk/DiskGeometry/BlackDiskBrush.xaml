<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BlackBrush3DFarward">
        <GradientStop Color="#333333" Offset="1.0"/>
        <GradientStop Color="#AFAFAF" Offset="0.0"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BlackBrush3DBackward">
        <GradientStop Color="#333333" Offset="0.0"/>
        <GradientStop Color="#AFAFAF" Offset="1.0"/>
    </LinearGradientBrush>
    <DrawingBrush x:Key="BlackDiskBrush">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Geometry="{StaticResource OuterCircleGeometry}" Brush="{StaticResource BlackBrush3DBackward}"/>
                <GeometryDrawing Geometry="{StaticResource InnerCircleGeometry}" Brush="{StaticResource BlackBrush3DFarward}"/>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
</ResourceDictionary>