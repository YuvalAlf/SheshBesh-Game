        <StaticResource ResourceKey="LeftHalfBoard"/>
        <StaticResource ResourceKey="RightHalfBoard"/>
        <StaticResource ResourceKey="UpperLedge"/>
        <StaticResource ResourceKey="DownLedge"/>
        
