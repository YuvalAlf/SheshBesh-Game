<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Storyboard x:Key="ViewportGlowAnimation" TargetProperty="(Viewport3D.Effect).(DropShadowEffect.BlurRadius)">
        <DoubleAnimation From="20" To="50" Duration="0:0:1" AutoReverse="True" RepeatBehavior="Forever">
            <DoubleAnimation.EasingFunction>
                <PowerEase Power="1.5" EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

</ResourceDictionary>