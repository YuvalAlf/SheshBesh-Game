<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DicesTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2"/>
    </Style>
    <TextBlock x:Key="Dice1NumberTextBlock" Style="{StaticResource DicesTextBlockStyle}" Text="5"/>
    <TextBlock x:Key="SpaceTextBlock"       Style="{StaticResource DicesTextBlockStyle}" Text="       "/>
    <TextBlock x:Key="Dice2NumberTextBlock" Style="{StaticResource DicesTextBlockStyle}" Text="1"/>


    <StackPanel x:Key="DiceRollValuesDisplay" Orientation="Horizontal" Margin="0,10,0,0"  HorizontalAlignment="Center">
        <StaticResource ResourceKey="Dice1NumberTextBlock"/>
        <StaticResource ResourceKey="SpaceTextBlock"/>
        <StaticResource ResourceKey="Dice2NumberTextBlock"/>
    </StackPanel>
</ResourceDictionary>